{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es2020", "dom"],
    "types": ["vite-svg-loader", "vite/client"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.vue"],
  
  "exclude": ["node_modules"]
}
